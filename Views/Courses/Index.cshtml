
@model List<CourseViewModel>

<h1>Catalogo dei Corsi</h1>

@foreach (CourseViewModel course in Model) { 
<div class="row course">
    <div class="col-md-1">
        <img src="@course.ImagePath" width="50" />
    </div>
    <div class="col-md-5">
        <h2>@course.Title</h2>
        <author>@course.Author</author>
    </div>

    <div class="col-md-2 rating"title="@course.Rating">
        @for (int i = 1; i <= 5; i++)
        {
            if (course.Rating >= i)
            {
                <i class="fas fa-star"></i>
            }
            else if (course.Rating >= i - 1)
            {
                <i class="fas fa-star half-alt"></i>
            }
            else
            {
                <i class="fas fa-star"></i>
            }
        }
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
    </div>
    <div class="col-md-2">
        @course.CurrentPrice@if (!@course.CurrentPrice.Equals(@course.FullPrice)) {  <br /><s>@course.FullPrice</s>}
    </div>    
    <div class="col-md-2">
        <a class="btn btn-outline-primary" asp-action="Detail" asp-route-id="@course.Id">Dettaglio Corso 5</a>
    </div>
</div>

}